<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cydorm.cydorm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="*" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GroceryManagerActivity" />
        <activity android:name=".LogItemActivity" />
        <activity android:name=".AddChoreActivity" />
        <activity android:name=".Login" />
        <activity android:name=".LoadImage" />
        <activity
                android:name=".ChoreListActivity"
                android:label="@string/title_activity_chore_list"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".AddViaUPC"></activity>
    </application>

</manifest>